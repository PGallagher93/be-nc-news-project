{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "returns an object corresponding to the chosen article_id",
    "queries": [],
    "exampleResponse": {
      
          "article_id": 1,
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "article_img_url": "img url"
        
      
    }
  },
  "GET /api/articles/": {
    "description": "returns an array of article objects with a comment count sorted by date in desc order",
    "queries": [],
    "exampleResponse": {
      
          "article_id": 1,
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "article_img_url": "img url",
          "comment_count": 1
        
      
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "returns an array of article objects with a comment count sorted by date in desc order",
    "queries": [],
    "exampleResponse":  [
      {
        "comment_id": 19,
        "body": "'this is a comment'",
        "article_id": 4,
        "author": "'butter_bridge'",
        "votes": 0,
        "created_at": "2023-08-15T19:21:03.619Z"
      }
    ]
  },
  "POST /api/articles/:article_id/comments": {
    "description": "posts a new comment to the article matching the inputted article id and returns the added comment object",
    "queries": [],
    "ExampleRequestBody": {"username":"string","body":"string"},
    "exampleResponse":  {
      "comment_id": 19,
      "body": "'this is a comment'",
      "article_id": 4,
      "author": "'butter_bridge'",
      "votes": 0,
      "created_at": "2023-08-15T19:21:03.619Z"
    }
  },

  "DELETE /api/comments/:comment_id": {
    "description": "posts a new comment to the article matching the inputted article id and returns the added comment object",
    "queries": [],
    "exampleResponse":  {}
  },
  
  "PATCH /api/articles/:article_id": {
    "description": "posts a new comment to the article matching the inputted article id and returns the added comment object",
    "queries": [],
    "exampleRequestBody": {"inc_votes":"number"},
    "exampleResponse":  {
      
      "article_id": 1,
      "title": "Seafood substitutions are increasing",
      "topic": "cooking",
